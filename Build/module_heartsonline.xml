<?xml version="1.0" encoding="UTF-8"?>
<project name="module_heartsonline" default="compile.module.heartsonline">
  <dirname property="module.heartsonline.basedir" file="${ant.file.module_heartsonline}"/>
  
  <property name="module.jdk.home.heartsonline" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.heartsonline" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.heartsonline" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.heartsonline" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="heartsonline.output.dir" value="${module.heartsonline.basedir}/out/production/HeartsOnline"/>
  <property name="heartsonline.testoutput.dir" value="${module.heartsonline.basedir}/out/test/HeartsOnline"/>
  
  <path id="heartsonline.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="heartsonline.module.production.classpath">
    <path refid="${module.jdk.classpath.heartsonline}"/>
  </path>
  
  <path id="heartsonline.runtime.production.module.classpath">
    <pathelement location="${heartsonline.output.dir}"/>
  </path>
  
  <path id="heartsonline.module.classpath">
    <path refid="${module.jdk.classpath.heartsonline}"/>
    <pathelement location="${heartsonline.output.dir}"/>
  </path>
  
  <path id="heartsonline.runtime.module.classpath">
    <pathelement location="${heartsonline.testoutput.dir}"/>
    <pathelement location="${heartsonline.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.heartsonline">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.heartsonline">
    <patternset refid="excluded.from.module.heartsonline"/>
  </patternset>
  
  
  <target name="compile.module.heartsonline" depends="compile.module.heartsonline.production,compile.module.heartsonline.tests" description="Compile module HeartsOnline"/>
  
  <target name="compile.module.heartsonline.production" depends="register.custom.compilers" description="Compile module HeartsOnline; production classes"/>
  
  <target name="compile.module.heartsonline.tests" depends="register.custom.compilers,compile.module.heartsonline.production" description="compile module HeartsOnline; test classes" unless="skip.tests"/>
  
  <target name="clean.module.heartsonline" description="cleanup module">
    <delete dir="${heartsonline.output.dir}"/>
    <delete dir="${heartsonline.testoutput.dir}"/>
  </target>
</project>